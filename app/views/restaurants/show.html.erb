<div class="container">

  <div class="col-sm-6 col-sm-offset-3">

    </br>


    <h1><%= @restaurant.name %></h1>

    <ul>
      <li><strong>Address: </strong><%= @restaurant.address %></li>
      <li><strong>Category: </strong><%= @restaurant.category %></li>
    </ul>


    <h4>Restaurant reviews</h4>

    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li>
        <%= review.content %> <strong>(<%= review.rating %>)</strong>
        </li>
      <% end %>
    </ul>
    <!-- # <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
     -->

   <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, :collection => [0, 1, 2, 3, 4, 5] %>
      <%= f.submit "Add a review", class: "btn btn-primary" %>
    <% end %>
  </div>

</div>

